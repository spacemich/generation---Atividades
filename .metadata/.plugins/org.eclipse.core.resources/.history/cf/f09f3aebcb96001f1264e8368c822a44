package exercicios_lacos_condicionais;

import java.util.Scanner;

public class Ex03 {

	public static void main(String[] args) {

		String nome, doador;
		float idade;
					
		Scanner leia = new Scanner(System.in);

		System.out.println("Digite seu nome: ");
		nome = leia.next();
				 
		System.out.println("Digite sua idade: ");
		idade = leia.nextFloat();
		
		System.out.println("Ja doou sangue? : (S/N) ? ");
		doador = leia.next();

		switch (doador) {

		case "Sim":
			System.out.println("Livro: Senhor dos aneis");
			break;

		case "Não":
			System.out.println("Não desista do curso da generation");
			break;
	}
}
}
